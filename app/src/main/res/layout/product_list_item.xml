<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/product_list_item_height"
    android:elevation="4dp"
    android:background="@drawable/rect">


    <ImageView
        android:id="@+id/product_list_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/product_image_description" />

    <FrameLayout
        android:id="@+id/product_list_item_text_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.6"
        android:layout_gravity="bottom"
        >

    </FrameLayout>
    <TextView
        android:id="@+id/product_list_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Example Example"
        android:fontFamily="@font/font_opensans"
        android:textColor="#ffffff"
        android:padding="@dimen/product_list_item_text_padding"
        android:textSize="20dp"
        android:layout_gravity="center_vertical"
        />

</FrameLayout>